<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:weightSum="1">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="345dp"
        android:layout_marginTop="40px"
        android:drawSelectorOnTop="true"
        android:spinnerMode="dropdown"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/btn_dropdown"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:text="sadsadsads"
        android:textColor="#fffdfff7"
        android:textColorHighlight="#ff000000"
        android:id="@+id/rubric"
        android:layout_gravity="center_horizontal" />


    <EditText
        android:layout_marginTop="20px"
        android:id = "@+id/editText"
        android:gravity="top"
        android:layout_width="335dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@android:color/white"
        android:scrollbars="vertical" />

    <TextView
        android:layout_marginTop="20px"
        android:layout_width="335dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/hiddenTextLabel"
        android:text="@string/hidden_text_header"
        android:textStyle="bold"
        android:background="@android:color/black"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_marginTop="20px"
        android:id = "@+id/editHiddenText"
        android:gravity="top"
        android:layout_width="335dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:ems="10"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/black"
        android:scrollbars="vertical" />

    <TextView
        android:layout_width="335dp"
        android:layout_marginLeft="28dp"
        android:layout_height="wrap_content"
        android:text="1                    2                    3                    4                    5"
        android:layout_gravity="left"
        android:id="@+id/rubricNum"
        android:textColor="#fffdfff7"
        android:textColorHighlight="#ff000000" />

    <SeekBar android:id="@+id/intensitySlider"
        android:layout_marginTop="20px"
        android:layout_marginBottom="10px"
        android:layout_weight="1"
        android:progress="2"
        android:layout_gravity="center_horizontal"
        android:layout_width="335dp"
        android:max="4"
        android:background="#D8D8D8"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:text="Some direct supervision required"
        android:textColor="#fffdfff7"
        android:textColorHighlight="#ff000000"
        android:id="@+id/rubricNumDescription"
        android:layout_gravity="center_horizontal" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Evaluation"
            android:layout_marginRight="40px"
            android:layout_marginLeft="30px"
            android:id="@+id/submit_eval_button"
            android:onClick="submitEval"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evaluation History"
            android:id="@+id/history"
            android:onClick="viewHistory"/>
    </LinearLayout>

</LinearLayout>
